<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.adhityavenancius.dibantu.OrderDetailActivity"
    android:paddingTop="20dp">


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/btnTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Take"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btnIgnore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ignore"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:onClick="onClick"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgPicture"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@+id/ratingBar">

        <TextView
            android:id="@+id/tvCategoryname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_corner"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="Cooking"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgName"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tmp_logo"/>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_toRightOf="@id/imgName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tmp_logo"/>
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_toRightOf="@id/imgPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgStartDate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tmp_logo"/>
                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_toRightOf="@id/imgStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgTime"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tmp_logo"/>
                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_toRightOf="@id/imgTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgEndDate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tmp_logo"/>
                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_toRightOf="@id/imgEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgFare"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tmp_logo"/>
                <TextView
                    android:id="@+id/tvFare"
                    android:layout_toRightOf="@id/imgFare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tmp_logo"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_toRightOf="@id/imgLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>


            <EditText
                android:id="@+id/etNotes"
                android:minLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




    </LinearLayout>

</RelativeLayout>
